{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "lib": ["es6"],
        "rootDir": ".",
        "allowJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "noEmit": true,
        "paths": {
            "*": ["./node_modules/*"]
        }
    },
    "include": ["docs/", "packages/", "tools"],
    "exclude": ["**/node_modules/", "**/dist/", "**/coverage/"]
}
